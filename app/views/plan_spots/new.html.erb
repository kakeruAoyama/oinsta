<h1>Add Spot To <%= @plan.name%></h1>
<h3>Search</h3>
 <%= form_tag({controller:"plan_spots",action:"new",plan_id:@plan.id}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag 'search'  %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spots.each do |spot| %>
      <tr>
        <td><%= spot.name %></td>
        <td><%= spot.address %></td>
        <td><%= spot.body %></td>
        <td><%= link_to 'Show', spot %></td>
        <td>
            <%= form_with(model: @plan_sopt, local: true) do |form| %>

                <div class="field">
                    <%= form.hidden_field :plan_id, value: @plan.id%>
                </div>

                <div class="field">
                    <%= form.hidden_field :spot_id, value: spot.id%>
                </div>

                <div class="actions">
                    <%= form.submit "Add" %>
                </div>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

