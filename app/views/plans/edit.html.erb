<%= form_with(model: @plan_sopt, local: true) do |form| %>

    <div class="field">
        <%= form.hidden_field :plan_id, value: params[:id]%>
    </div>

    <%= form.collection_select :spot_id, Spot.all, :id, :name, include_blank: "選択して下さい" %>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>

