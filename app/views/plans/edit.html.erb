<% @spots.each do |s| %>
    name:
    <%= s.name%>|
    address:
    <%= s.address%>|
    body:
    <%= s.body%>|
    <%= button_to 'Destroy',delete_plan_spot_path(:plan_id =>params[:id], :spot_id => s.id), method: :delete, data: { confirm: 'Are you sure?' } %>
