<h1>Plans</h1>

<p id="notice"><%= notice %></p>

<h3>Search</h3>
 <%= form_tag({controller:"plans",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag 'search'  %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dscr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.dscr %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
<%= link_to 'New Spot', new_spot_path %>
<%= link_to 'Spot Index', spots_path %>
